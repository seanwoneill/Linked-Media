<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aa101.x501.linkedmedia.MainActivity" >

    <ImageButton
        android:id="@+id/jabberwocky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/jabber"
        android:onClick="clickJabber"
        android:padding="5dp"
        android:src="@drawable/jabberwocky_ldpi" />

    <ImageButton
        android:id="@+id/nasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/nasa"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/nasa_hdpi" />

    <ImageButton
        android:id="@+id/war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/jabberwocky"
        android:contentDescription="@string/war"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp"
        android:src="@drawable/war_of_the_worlds_cover_hdpi" />

    <ImageButton
        android:id="@+id/rollingBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/nasa"
        android:contentDescription="@string/ball"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:src="@drawable/rollingball_hdmi" />

</RelativeLayout>